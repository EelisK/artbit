{
  "include": ["**/*.py"],

  "exclude": ["**/__pycache__", ".venv"],

  "typeCheckingMode": "strict",

  "defineConstant": {
    "DEBUG": true
  },

  "reportMissingImports": "error",
  "enableTypeIgnoreComments": false,
  "reportUnknownMemberType": false,

  "pythonVersion": "3.9",
  "pythonPlatform": "Linux",

  "executionEnvironments": [
    {
      "root": "."
    }
  ]
}
